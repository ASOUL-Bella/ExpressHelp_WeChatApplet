.page {
  height: 100%;
  background-color: var(--weui-BG-2)
}

.weui-label {
  width: 4.5em
}

.weui-form__control-area {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin-top: 60rpx;
  margin-bottom: 100rpx;
}

.weui-cell.weui-cell_active{
  height: 50rpx;
  padding: 15rpx 40rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center
}

.weui-input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 1.41176471em;
  line-height: 1.41176471;
  text-align: center;
}