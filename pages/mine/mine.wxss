/* pages/mine/mine.wxss */
.weui-cell__hd {
  font-size: 0
}

.weui-cell__hd image {
  margin-right: 16px;
  vertical-align: middle;
  width: 20px;
  height: 20px
}

.page__hd {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ac64ff;
  padding: 25rpx
}

.image_radius {
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
  margin: 10rpx;
}

.page__title {
  font-size: medium;
  color: white;
}

.placeholder {
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  background-color: var(--weui-BG-1);
  height: 2.3em;
  line-height: 2.3em;
  color: var(--weui-FG-1)
}

.weui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items:center;
  justify-content: space-around;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  background-color: white;
}

.weui-flex__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  display: flex;
  flex-direction: column;
  align-items:center;
  justify-content: center;
  flex: 1;
  font-size: 28rpx;
}

.weui-cells__top {
  border: 1rpx, solid, black;
  background-color: var(--weui-BG-2);
  font-size: 28rpx;
  overflow: hidden;
  position: relative
}

.weui-cell__top {
  padding: 16rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center
}

.weui-flex__item image {
  width: 50rpx;
  height: 50rpx;
}