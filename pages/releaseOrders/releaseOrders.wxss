}

.weui-label {
  width: 4.1em
}

.weui-form__control-area {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.weui-cell.weui-cell_active{
  height: 50rpx;
  padding: 15rpx 40rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  text-align: center;
}
