.page {
  height: 100%;
  background-color: var(--weui-BG-2)
}

.weui-cells__group_form .weui-label{
  margin-right: 0;
}

.weui-form__control-area {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.weui-cell.weui-cell_active{
  height: 50rpx;
  padding: 15rpx 40rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  text-align: center;
}

.weui-textarea {
  display: block;
  border: 0;
  resize: none;
  background: transparent;
  width: 100%;
  color: inherit;
  font-size: 1em;
  line-height: inherit;
  outline: 0;
  height:500rpx;
  text-align:center;
}
